wheel_real_size = 0.58
nail_real_size = 6 * (10**-3)
wheel_pixel_size = 3867
nail_pixel_size = (nail_real_size / wheel_real_size) * wheel_pixel_size

npins = 168
pins = generate_pins(npins, wheel_pixel_size, nail_pixel_size)

