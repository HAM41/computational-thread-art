image_w = prepare_image("churchill_weighting.jpg", 3867, weighting=True)

fig, axs = plt.subplots(1,3,figsize=(15,15));
for (i,j) in zip(range(3), [image_m, image_c, image_w]):
    axs[i].imshow(j[:,::-1].T, cmap=plt.get_cmap("Greys"));
    
